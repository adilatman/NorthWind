@model IEnumerable<GetCustomerVM>
<h1>Customers</h1>
@if (TempData["SuccessMessageCustomerAdd"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessageCustomerAdd"]</div>
}
<br />
<div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <a asp-action="NewCustomer" asp-controller="Customer" class="btn btn-danger">Add Customer</a>
    <a asp-action="ExportPDF" asp-controller="Customer" class="btn btn-dark" method="post">Export to PDF</a>
    <a asp-action="ExportWord" asp-controller="Customer" class="btn btn-primary" method="post">Export to Word</a>
    <a asp-action="ExportExcel" asp-controller="Customer" class="btn btn-secondary" method="post">Export to Excel</a>
</div>
<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>ContactTitle</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Fax</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(c => c.CompanyName))
        {
            <tr>
                <td>@item.CompanyName <br /><a asp-action="EditCustomer" asp-controller="Customer" asp-route-id="@item.CustomerID">Edit</a> | <a asp-action="DeleteCustomer" asp-controller="Customer" asp-route-id="@item.CustomerID">Delete</a></td>
                <td>@item.ContactName</td>
                <td>@item.ContactTitle</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Fax</td>
            </tr>
        }
    </tbody>
</table>

