@model AddEmployeeVM

<h2>Add New Employee</h2>
<br />
<form asp-controller="Employee" asp-action="NewEmployee" method="post">
    <label>FirstName: </label> <input type="text" asp-for="FirstName" />
    <br />
    <label>LastName: </label> <input type="text" asp-for="LastName" />
    <br />
    <label>Title: </label> <input type="text" asp-for="Title" />
    <br />
    <label>TitleOfCourtesy: </label> <input type="text" asp-for="TitleOfCourtesy" />
    <br />
    <label>Reports To: </label> <select asp-for="ReportsTo" asp-items="@(new SelectList(Model.employeeVMs,"EmployeeID","LastName"))">
        <option>Seciniz</option>
    </select>
    <br />
    <label>BirthDate: </label> <input type="date" asp-for="BirthDate" />
    <br />
    <label>HireDate: </label> <input type="date" asp-for="HireDate" />
    <br />
    <label>Address: </label> <input type="text" asp-for="Address" />
    <br />
    <label>City: </label> <input type="text" asp-for="City" />
    <br />
    <label>Region: </label> <input type="text" asp-for="Region" />
    <br />
    <label>PostalCode: </label> <input type="text" asp-for="PostalCode" />
    <br />
    <label>Country: </label> <input type="text" asp-for="Country" />
    <br />
    <label>HomePhone: </label> <input type="tel" asp-for="HomePhone" />
    <br />
    <label>Extension: </label> <input type="text" asp-for="Extension" />
    <br />
    <label>Notes: </label> <input type="text" asp-for="Notes" />
    <br />
    <input type="submit" name="name" value="Add" class="btn btn-danger" />
</form>
