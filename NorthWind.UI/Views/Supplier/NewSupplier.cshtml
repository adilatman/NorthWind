@model SupplierVM

<h2>Add New Supplier</h2>
@if (TempData["ErrorMessageSupplierAdd"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessageSupplierAdd"]</div>
}
<br />
<form asp-controller="Supplier" asp-action="NewSupplier" method="post">
    <div class="mb-3"><label class="form-label">Supplier Name: </label> <input class="form-control" type="text" asp-for="CompanyName" /></div>
    <div class="mb-3"><label class="form-label">Contact Name: </label> <input class="form-control" type="text" asp-for="ContactName" /></div>
    <div class="mb-3"><label class="form-label">Contact Title: </label> <input class="form-control" type="text" asp-for="ContactTitle" /></div>
    <div class="mb-3"><label class="form-label">Address: </label> <input class="form-control" type="text" asp-for="Address" /></div>
    <div class="mb-3"><label class="form-label">City: </label> <input class="form-control" type="text" asp-for="City" /></div>
    <div class="mb-3"><label class="form-label">Region: </label> <input class="form-control" type="text" asp-for="Region" /></div>
    <div class="mb-3"><label class="form-label">Postal Code: </label> <input class="form-control" type="text" asp-for="PostalCode" /></div>
    <div class="mb-3"><label class="form-label">Country: </label> <input class="form-control" type="text" asp-for="Country" /></div>
    <div class="mb-3"><label class="form-label">Phone: </label> <input class="form-control" type="text" asp-for="Phone" /></div>
    <div class="mb-3"><label class="form-label">Fax: </label> <input class="form-control" type="text" asp-for="Fax" /></div>
    <div class="mb-3"><input type="submit" name="name" value="Add" class="btn btn-danger" /></div>
</form>
